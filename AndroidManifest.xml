<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="PM.Mobile.SurfCam"
      android:versionCode="1"
      android:versionName="1.0">
      
<uses-sdk android:minSdkVersion="8" />

<uses-permission android:name="android.permission.INTERNET"></uses-permission>
<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application android:debuggable="true" android:label="@string/app_name" android:icon="@drawable/icon">
        <activity android:name="Hello"
        
        android:icon="@drawable/icon"
        			android:configChanges="orientation|keyboardHidden|keyboard"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                
            </intent-filter>
        </activity>
        <activity android:name="ListCams" android:icon="@drawable/icon" android:configChanges="keyboard|keyboardHidden|orientation">
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ShowCam" android:icon="@drawable/icon" android:configChanges="keyboard|keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                
            </intent-filter>
        </activity>

    </application>

</manifest>